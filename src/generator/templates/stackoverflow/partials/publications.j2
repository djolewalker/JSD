{% if model.publications | length %}
    <section class="section">
        <header>
            <h2 class='section-title'>Publications</h2>
        </header>
        <section id="publications">
            {% for publication in model.publications %}

                <section class="publication-item">
                    {% if publication.summary %}
                        <label for="publication-item-{{ loop.index }}"></label>
                    {% endif %}

                    <header class="clear">
                        {% if publication.date %}
                            <span class="date">
                                {{ publication.date.month }}-{{ publication.date.year }}
                            </span>
                        {% endif %}
                        <div class="header-left">
                            {% if publication.name %}
                                <span class="name">
                            {% if publication.url %}
                                <span class="website">
                                    <span class="fas fa-external-link-alt"></span>
                                    <a target="_blank" href="{{ publication.url }}">{{ publication.name }}</a>
                                </span>
                            {% else %}
                                {{ publication.name }}
                            {% endif %}
                        </span>
                            {% endif %}

                            {% if publication.publisher %}
                                <span class="publisher">
                            in {{ publication.publisher }}
                        </span>
                            {% endif %}
                        </div>

                    </header>

                    <div class="item">
                        {% if publication.summary %}
                            <div class="summary">{{ publication.summary }}</div>
                        {% endif %}
                    </div>
                </section>
            {% endfor %}
        </section>
    </section>
{% endif %}
